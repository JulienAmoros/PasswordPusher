function showDaysValue(newValue)
{
  if (newValue > 1) {
  	document.getElementById("daysrange").innerHTML=newValue + ' <%= I18n.t('passwords.new.days') %>';
  } else {
  	document.getElementById("daysrange").innerHTML=newValue + ' <%= I18n.t('passwords.new.day') %>';
  }
}

function showViewsValue(newValue)
{
  if (newValue > 1) {
  	document.getElementById("viewsrange").innerHTML=newValue + ' <%= I18n.t('passwords.new.views') %>';
  } else {
  	document.getElementById("viewsrange").innerHTML=newValue + ' <%= I18n.t('passwords.new.view') %>';
  }
}


msg = "<%= I18n.t('passwords.new.enter_password') %>"
function prepareTextField(e) {
  if (e) {
    if (e.value == msg) {
      e.value = '';
    }
  }
}

function revertTextField(e) {
  if (e)
    if (e.value == '') {
      e.value = msg;
    }
}

function setCopied() {
	$('#clip_tip').text('<%= I18n.t('passwords.new.view') %>');
}

